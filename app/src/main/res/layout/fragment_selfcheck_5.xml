<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="page"
            type="String" />

        <variable
            name="onYes"
            type="android.view.View.OnClickListener" />

        <variable
            name="onNo"
            type="android.view.View.OnClickListener" />

        <variable
            name="onNext"
            type="android.view.View.OnClickListener" />

        <variable
            name="onBack"
            type="android.view.View.OnClickListener" />

        <variable
            name="isLoading"
            type="Boolean" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selfcheck_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:onClick="@{onBack}"
            android:padding="@dimen/s"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            style="@style/PoppinMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/s"
            android:paddingEnd="@dimen/s"
            android:text="@string/quest_title"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/PoppinRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/s"
            android:paddingEnd="@dimen/s"
            android:text="@string/quest_subtitle"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m"
            android:contentDescription="@null"
            android:src="@drawable/illustration_contact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle" />

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shape_roundRect_topLeftRadius="@dimen/s"
            app:shape_roundRect_topRightRadius="@dimen/s">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="@dimen/s">

                <TextView
                    android:id="@+id/question"
                    style="@style/PoppinMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/quest_5"
                    android:textSize="@dimen/textM"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/help"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/quest_5_info"
                    android:textSize="@dimen/textXs"
                    app:layout_constraintEnd_toEndOf="@id/question"
                    app:layout_constraintStart_toStartOf="@id/question"
                    app:layout_constraintTop_toBottomOf="@id/question" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/yes"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m"
                    android:onClick="@{onYes}"
                    android:padding="@dimen/s"
                    android:text="@string/yes"
                    android:textColor="@color/colorText"
                    app:layout_constraintEnd_toEndOf="@id/help"
                    app:layout_constraintStart_toStartOf="@id/help"
                    app:layout_constraintTop_toBottomOf="@id/help" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xs"
                    android:onClick="@{onNo}"
                    android:padding="@dimen/s"
                    android:text="@string/no"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/yellow"
                    app:layout_constraintEnd_toEndOf="@id/help"
                    app:layout_constraintStart_toStartOf="@id/help"
                    app:layout_constraintTop_toBottomOf="@id/yes" />

                <TextView
                    android:id="@+id/counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xl"
                    android:text="@{page}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/no" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/recoverLoading"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:visibility="@{isLoading ? View.VISIBLE : View.GONE}"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="lottie/wave-primary-loading.json"
                    app:lottie_loop="true"
                    app:layout_constraintBottom_toBottomOf="@id/counter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/counter"
                    tools:layout_editor_absoluteX="280dp"
                    tools:layout_editor_absoluteY="356dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_arrow_right_light"
                    android:onClick="@{onNext}"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:visibility="@{isLoading ? View.GONE : View.VISIBLE}"
                    app:layout_constraintBottom_toBottomOf="@id/counter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/counter" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.github.florent37.shapeofview.shapes.RoundRectView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>