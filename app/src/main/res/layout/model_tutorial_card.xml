<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="image"
            type="int" />

        <variable
            name="text"
            type="String" />

        <variable
            name="title"
            type="String" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/s">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tutorial_bg">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:padding="@dimen/s"
                android:scaleType="centerCrop"
                android:src="@{image}"
                app:layout_constraintBottom_toTopOf="@id/hr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/hr"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintBottom_toTopOf="@id/title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logo" />

            <TextView
                android:id="@+id/title"
                style="@style/PoppinMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:background="@android:color/white"
                android:gravity="start"
                android:paddingStart="@dimen/s"
                android:paddingTop="@dimen/s"
                android:paddingEnd="@dimen/s"
                android:text="@{title}"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/desc"
                style="@style/PoppinRegular.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/xs"
                android:layout_marginEnd="@dimen/xs"
                android:layout_marginBottom="@dimen/xs"
                android:background="@android:color/white"
                android:gravity="start"
                android:paddingStart="@dimen/s"
                android:paddingEnd="@dimen/s"
                android:paddingBottom="@dimen/s"
                android:text="@{text}"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>