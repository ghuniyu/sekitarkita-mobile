<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="onInfoClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="text"
            type="String" />

        <variable
            name="onSelfTestClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="onHospitalClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="onCallCenterClick"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <include
            layout="@layout/model_general_top_bar"
            bind:onInfoClick="@{onInfoClick}"
            bind:text="@{text}" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:tabPaddingStart="@dimen/s"
            app:tabPaddingEnd="@dimen/s"
            android:layout_marginStart="@dimen/m"
            android:layout_marginTop="@dimen/m"
            android:layout_marginEnd="@dimen/m"
            android:background="@drawable/tab_layout_background"
            app:tabBackground="@drawable/tab_layout_selector"
            app:tabGravity="center"
            app:tabRippleColor="@null"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"
            app:tabTextAppearance="@style/TabTextAppearance"
            app:tabTextColor="@android:color/white">

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        </androidx.viewpager.widget.ViewPager>
    </LinearLayout>
</layout>
