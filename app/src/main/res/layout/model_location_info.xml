<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="address"
            type="String" />
    </data>

    <TextView
        android:paddingStart="@dimen/s"
        android:paddingEnd="@dimen/s"
        android:paddingTop="@dimen/xxs"
        android:paddingBottom="@dimen/xxs"
        android:background="@drawable/box_rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/s"
        android:drawableStart="@drawable/ic_pin"
        android:drawablePadding="@dimen/xxs"
        android:gravity="center|start"
        android:text="@{address}"
        android:textSize="@dimen/textXs" />
</layout>