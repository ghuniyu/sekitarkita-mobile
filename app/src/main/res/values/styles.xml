<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/PoppinRegular</item>
        <item name="android:textAppearanceButton">@style/PoppinRegular</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="editTextStyle">@style/PoppinRegular.EditText</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="ReportButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="NormalButton" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--    <style name="SplashTheme" parent="AppTheme">-->
    <!--        <item name="android:windowBackground">@drawable/splash_background</item>-->
    <!--    </style>-->

    <style name="PoppinRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="PoppinMedium" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="PoppinSemiBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="PoppinBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="PoppinRegular.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PoppinSemiBold.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PoppinBold.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PoppinRegular.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PoppinSemiBold.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PoppinBold.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PoppinRegular.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PoppinSemiBold.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PoppinBold.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PoppinRegular.XL">
        <item name="android:textSize">64sp</item>
    </style>

    <style name="PoppinSemiBold.XLarge">
        <item name="android:textSize">64sp</item>
    </style>

    <style name="PoppinBold.XLarge">
        <item name="android:textSize">64sp</item>
    </style>

    <style name="PoppinRegular.EditText" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
    </style>
</resources>
