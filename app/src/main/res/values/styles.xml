<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/MontserratRegular</item>
        <item name="android:textAppearanceButton">@style/MontserratRegular</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="editTextStyle">@style/MontserratRegular.EditText</item>
    </style>

    <style name="report_btn" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="normal_btn" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="MontserratRegular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MontserratLight" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="MontserratBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="MontserratRegular.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MontserratLight.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MontserratBold.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MontserratRegular.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MontserratLight.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MontserratBold.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MontserratRegular.Large">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="MontserratLight.Large">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="MontserratBold.Large">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="MontserratRegular.XL">
        <item name="android:textSize">64sp</item>
    </style>

    <style name="MontserratLight.XLarge">
        <item name="android:textSize">64sp</item>
    </style>

    <style name="MontserratBold.XLarge">
        <item name="android:textSize">64sp</item>
    </style>

    <style name="MontserratRegular.EditText" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
</resources>
